<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"

        app:cardElevation="0dp"
        card_view:cardBackgroundColor="#08FFFFFF"
        card_view:cardCornerRadius="@dimen/margin_size_small"
        card_view:cardPreventCornerOverlap="false"
        card_view:contentPadding="1dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_small"
                    android:layout_marginTop="@dimen/margin_size_small"
                    android:layout_marginRight="@dimen/margin_size_normal"
                    android:layout_marginBottom="@dimen/margin_size_small"
                    android:maxWidth="48dp"
                    android:maxHeight="48dp"
                    app:cardCornerRadius="24dp"
                    card_view:cardBackgroundColor="@android:color/transparent"
                    card_view:cardElevation="0dp"
                    card_view:cardPreventCornerOverlap="false"
                    card_view:contentPadding="0dp"

                    >

                    <ImageView
                        android:id="@+id/imgSong"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/shape_circle"
                        android:maxWidth="48dp"
                        android:maxHeight="48dp"
                        android:scaleType="fitXY"
                        tools:srcCompat="@mipmap/musical_note_light_32" />

                </android.support.v7.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="12dp"
                    >

                    <TextView
                        android:id="@+id/txtArtistName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tên ca sĩ"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/txtArtistCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 bài hát"
                        android:textSize="@dimen/text_size_small"

                        />
                </LinearLayout>
            </TableRow>

        </TableLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>