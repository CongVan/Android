<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"

    >
    <!--android:clickable="true"-->
    <!--android:foreground="?android:attr/selectableItemBackground"-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardElevation="0dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardPreventCornerOverlap="false"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">
            <TableRow>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_small"
                    android:layout_marginTop="@dimen/margin_size_small"
                    android:layout_marginRight="@dimen/margin_size_normal"
                    android:layout_marginBottom="@dimen/margin_size_small"
                    app:cardCornerRadius="@dimen/border_radius_small"
                    app:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="@color/colorWhiteLight"
                    card_view:cardElevation="@dimen/elevation_xsmall"
                    card_view:contentPadding="0dp">

                    <ImageView
                        android:id="@+id/imgPlaylist"
                        android:layout_width="@dimen/image_card_item_playlist"
                        android:layout_height="@dimen/image_card_item_playlist"
                        android:adjustViewBounds="true"

                        android:scaleType="fitXY"
                        tools:srcCompat="@mipmap/music_album_128" />
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtPlaylistTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Tiêu đề bài hát"
                        android:textColor="@color/colorTitlePrimary"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtNumberSongPlaylist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số bài hát"
                        android:textColor="@color/colorTitleSecondary"
                        android:textSize="@dimen/text_size_small"

                        />



                </LinearLayout>
            </TableRow>

        </TableLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>